  "private": true,
  "description": "Arcwell Open Source Clinical Research Platform, umbrella repository",
  "homepage": "https://github.com/arcweb/arcwell#readme",
  "bugs": {
    "url": "https://github.com/arcweb/arcwell/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcweb/arcwell.git"
  },
  "license": "Apache-2.0",
  "author": "Arcweb Technologies, LLC <hello@arcwebtech.com>",
